{
  "name": "nestjs-boilerplate",
  "version": "0.0.1",
  "description": "NestJS boilerplate",
  "author": "huyhn",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "dev": "yarn migration:run && nest start --watch",
    "start": "yarn migration:run && nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "yarn migration:runprod && node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "migration:create": "node -e \"require('child_process').execSync('yarn typeorm migration:create ./src/database/migration/' + process.argv[1], { stdio: 'inherit' })\"",
    "migration:generate": "node -e \"require('child_process').execSync('yarn typeorm migration:generate -d src/database/data-source.ts ./src/database/migration/' + process.argv[1], { stdio: 'inherit' })\"",
    "migration:run": "yarn typeorm migration:run -d src/database/data-source.ts",
    "migration:revert": "yarn typeorm migration:revert -d src/database/data-source.ts",
    "migration:runprod": "yarn typeormprod migration:run -d dist/src/database/data-source.js",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeormprod": "node ./node_modules/typeorm/cli.js",
    "seed": "node -e \"require('child_process').execSync('ts-node -r tsconfig-paths/register src/database/seed/' + process.argv[1], { stdio: 'inherit' })\"",
    "seedprod": "node -e \"require('child_process').execSync('node dist/src/database/seed/' + process.argv[1], { stdio: 'inherit' })\""
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.787.0",
    "@aws-sdk/cloudfront-signer": "^3.775.0",
    "@aws-sdk/s3-request-presigner": "^3.787.0",
    "@aws-sdk/client-ses": "^3.758.0",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/common": "^11.0.19",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.12",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.12",
    "@nestjs/swagger": "^11.1.0",
    "@nestjs/typeorm": "^11.0.0",
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "bignumber.js": "^9.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "handlebars": "^4.7.8",
    "ioredis": "^5.6.0",
    "mysql2": "^3.14.0",
    "nodemailer": "^6.10.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "redlock": "^5.0.0-beta.2",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.21",
    "typeorm-extension": "^3.7.0",
    "typeorm-transactional": "^0.5.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@faker-js/faker": "^9.6.0",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.12",
    "@testcontainers/mysql": "^10.23.0",
    "@types/bcrypt": "^10.0.28-alpha",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.15",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.5",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "testcontainers": "^10.23.0",
    "ts-jest": "^29.3.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": "22.14.0"
  },
  "resolutions": {
    "string-width": "4.2.3",
    "strip-ansi": "6.0.1"
  }
}
